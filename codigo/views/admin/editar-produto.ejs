<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar: <%= produto.nome %></title>
    <link rel="stylesheet" href="/stylesheets/cadastro-produto.css">
</head>
<body>
    
    <div class="container">
        <h1>Editar Produto</h1>
        
        <form action="/admin/produtos/editar/<%= produto.id %>" method="POST">
            <div class="form-group">
                <label for="nome">Nome do Produto</label>
                <input type="text" id="nome" name="nome" value="<%= produto.nome %>" required>
            </div>
            
            <div class="form-group">
                <label for="descricao">Descrição</label>
                <textarea id="descricao" name="descricao" required><%= produto.descricao %></textarea>
            </div>
            
            <div class="form-group">
                <label for="preco">Preço (R$)</label>
                <input type="number" id="preco" name="preco" value="<%= produto.preco %>" step="0.01" min="0" required>
            </div>
            
            <div class="form-group">
                <label for="quantidade">Quantidade em Estoque</label>
                <input type="number" id="quantidade" name="quantidade" value="<%= produto.quantidade %>" min="0" required>
            </div>
            
            <div class="form-group">
                <label for="categoriaId">Categoria</label>
                <select id="categoriaId" name="categoriaId" required>
                    <option value="" disabled selected>Selecione uma categoria</option>
                    <% if (categorias && categorias.length > 0) { %>
                        <% categorias.forEach(categoria => { %>
                            <option 
                                value="<%= categoria.id %>"
                                <%# No form de edição, pré-seleciona a categoria atual do produto %>
                                <% if (typeof produto !== 'undefined' && produto.categoriaId == categoria.id) { %>
                                    selected
                                <% } %>
                            >
                                <%= categoria.nome %>
                            </option>
                        <% }) %>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <label for="imagem">URL da Imagem</label>
                <input type="text" id="imagem" name="imagem" value="<%= produto.imagem %>" required>
                <span class="field-feedback">Altere o link da imagem se desejar.</span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="submit-btn" style="background-color: #7b5a4a;">Salvar Alterações</button>
            </div>
        </form>
    </div>

</body>
</html>