<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Cadastro - alcool.bet</title>
<link rel="stylesheet" href="/stylesheets/cadastro.css" />

</head>
<body>
  <header>
    <div class="logo">
      <img src="/imagens/logo.png" alt="Logo alcool.bet" />
      <h1>alcool.bet</h1>
    </div>
  </header>

  <main>
    <h2>Crie sua conta</h2>

    <!-- action aponta para rota backend -->
    <form class="form-cadastro" id="cadastroForm" method="POST" action="/cadastrar-usuario">

      <label for="nome">Nome completo</label>
      <input type="text" id="nome" name="nome" required />

      <label for="cpf">CPF</label>
      <input type="text" id="cpf" name="cpf" required maxlength="11" />

      <label for="data_nasc">Data de Nascimento</label>
      <input type="date" id="data_nasc" name="data_nasc" required />

      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />

      <label for="senha">Senha</label>
      <input type="password" id="senha" name="senha" required />

      <button type="submit">Cadastrar</button>
    </form>
  </main>

  <!-- Esse script é só para testes: REMOVER EM PRODUÇÃO -->
  <script>
    const form = document.getElementById('cadastroForm');
    form.addEventListener('submit', (e) => {
      e.preventDefault(); // REMOVER depois
      window.location.href = '/compras'; // Backend real deve redirecionar
    });
  </script>
</body>
</html>
