        <button class="btn-rastrear">Rastrear</button>
      </div>
    </div>
  </section>

  <section class="avaliacao-produto">
    <div class="container">
      <h2>Avaliação de Produtos</h2>
      <div class="avaliacao-form">
        <select>
          <option>Selecione um produto</option>
          <option>Cerveja IPA 600ml</option>
          <option>Vinho Tinto Seco 750ml</option>
          <option>Whisky 12 anos 1L</option>
        </select>
        <div class="estrelas-selecao">
          <span>Sua avaliação:</span>
          <div class="estrelas-input">
            <input type="radio" id="star5" name="rating" value="5" /><label for="star5">★</label>
            <input type="radio" id="star4" name="rating" value="4" /><label for="star4">★</label>
            <input type="radio" id="star3" name="rating" value="3" /><label for="star3">★</label>
            <input type="radio" id="star2" name="rating" value="2" /><label for="star2">★</label>
            <input type="radio" id="star1" name="rating" value="1" /><label for="star1">★</label>
          </div>
        </div>
        <textarea placeholder="Deixe seu comentário sobre o produto"></textarea>
        <button class="btn-avaliar">Enviar Avaliação</button>
      </div>
    </div>
  </section>

