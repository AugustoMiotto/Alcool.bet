  <div class="login-modal" id="loginModal">
    <div class="modal-content">
      <span class="close-modal">&times;</span>
      <h2>Login / Cadastro</h2>
      <div class="tabs">
        <button class="tab-btn active" data-tab="login">Login</button>
        <button class="tab-btn" data-tab="cadastro">Cadastro</button>
      </div>
      <div class="tab-content active" id="login">
        <form>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Digite seu email" />
          </div>
          <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" id="senha" placeholder="Digite sua senha" />
          </div>
          <button type="submit" class="btn-primary">Entrar</button>
          <a href="#" class="esqueciSenha">Esqueci minha senha</a>
        </form>
      </div>
      <div class="tab-content" id="cadastro">
        <form>
          <div class="form-group">
            <label for="nome">Nome Completo</label>
            <input type="text" id="nome" placeholder="Digite seu nome completo" />
          </div>
          <div class="form-group">
            <label for="email-cadastro">Email</label>
            <input type="email" id="email-cadastro" placeholder="Digite seu email" />
          </div>
          <div class="form-group">
            <label for="senha-cadastro">Senha</label>
            <input type="password" id="senha-cadastro" placeholder="Crie uma senha" />
          </div>
          <div class="form-group">
            <label for="confirmar-senha">Confirmar Senha</label>
            <input type="password" id="confirmar-senha" placeholder="Confirme sua senha" />
          </div>
          <button type="submit" class="btn-primary">Criar Conta</button>
        </form>
      </div>
    </div>
  </div>

  <div class="carrinho-sidebar" id="carrinhoSidebar">
    <div class="carrinho-header">
      <h3>Seu Carrinho</h3>
      <button class="fechar-carrinho">&times;</button>
    </div>
    <div class="carrinho-itens">
      <div class="carrinho-item">
        <img src="/images/placeholder.svg" alt="Cerveja IPA" />
        <div class="item-info">
          <h4>Cerveja IPA 600ml</h4>
          <p>R$ 12,90</p>
          <div class="quantidade">
            <button class="diminuir">-</button>
            <span>1</span>
            <button class="aumentar">+</button>
          </div>
        </div>
        <button class="remover-item">&times;</button>
      </div>
      <div class="carrinho-item">
        <img src="/images/placeholder.svg" alt="Vinho Tinto" />
        <div class="item-info">
          <h4>Vinho Tinto Seco 750ml</h4>
          <p>R$ 39,90</p>
          <div class="quantidade">
            <button class="diminuir">-</button>
            <span>1</span>
            <button class="aumentar">+</button>
          </div>
        </div>
        <button class="remover-item">&times;</button>
      </div>
    </div>
    <div class="carrinho-resumo">
      <div class="subtotal">
        <span>Subtotal:</span>
        <span>R$ 52,80</span>
      </div>
      <div class="frete">
        <span>Frete:</span>
        <span>R$ 12,00</span>
      </div>
      <div class="total">
        <span>Total:</span>
        <span>R$ 64,80</span>
      </div>
    </div>
    <div class="carrinho-acoes">
      <button class="btn-continuar">Continuar Comprando</button>
      <button class="btn-finalizar">Finalizar Compra</button>
    </div>
  </div>

